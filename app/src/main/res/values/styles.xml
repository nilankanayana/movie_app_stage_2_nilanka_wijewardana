<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:itemBackground">@color/popup_background</item>
        <item name="actionBarItemBackground">@color/popup_background</item>
    </style>

    <style name="DetailsTheme" parent="AppTheme">
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorText</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="BackgroundImageView">
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
